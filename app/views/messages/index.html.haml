-# .flash-box
-#   グループを作成しました

.wrapper
  .chat-side
    = render 'devise/shared/side_bar'
    -#左側(header/groupsの部分テンプレート)
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group
          = @group.name
        %ul.main-header__left-box__member-list
          Member : 
          %li.main-header__left-box__member-list__member
            = current_user.name
      .main-header__edit-btn
        =link_to 'Edit', edit_group_path(current_user)
    .messages
      = render partial: 'message', collection: @messages
    .form
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :content,  placeholder: 'type a message', class: 'input-box__text'
          = f.label :image, class: 'input-box__image' do
            = fa_icon 'image'
            = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'